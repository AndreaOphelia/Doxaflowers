---
import MainLayout from "../layouts/MainLayout.astro";
import Link from "../components/Link.astro";
import Button from "../components/Button.astro";
import { Image } from "astro:assets";
import Form from "../components/Form.astro";
---



<MainLayout title="Doxa Workshop">
    <section class="py-16 md:py-24">
        <div class="flex flex-col md:flex-row justify-between gap-8 md:gap-16">
          <div>
            <h1>Workshop</h1>
            <p>
              Doxa Flowers skaber kunstneriske papirblomster, hvor hvert arrangement
              er et unikt værk, skabt specielt til dig, dit rum eller din
              begivenhed. Jeg arbejder efter principperne om slow craftsmanship,
              hvilket betyder, at hvert blad farves og formes i hånden. Dette er
              ikke en webshop med hurtig levering.
            </p>
          </div>
          <Button variant="primary" size="small">Tilmeld workshop</Button>
        </div>
      </section>





</MainLayout>