---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
import Heading from "../components/Heading.astro";
---

<MainLayout title="Doxa Flowers">
  <section class="text-primary-content py-24">
    <Heading htmlheading="h1" size="large" style="primary"
      >Værker og Inspiration</Heading
    >
    <div class="flex justify-between mb-8">
      <p class="text-primary-content mt-4">
        Gennem tiden har jeg skabt unikke blomsterværker til private hjem,
        events og erhverv. Her kan du finde inspiration til dit eget
        unika-projekt.
      </p>
      <a href="/kontakt">
        <Button variant="primary" size="small" variant="primary"
          >Lav en bestilling</Button
        ></a
      >
    </div>
  </section>

  <div
    x-data="{
      filter: 'Alle',
      search: '',
      colors: ['Alle','Rød','Lyserød','Gul','Blå','Hvid','Grøn','Flerfarvet'],
      images: [

        { src: '/images/blomst2.webp', name: 'Blå hortensia', color: 'Blå' },
        { src: '/images/blomst3.webp', name: 'Pink hortensia', color: 'Lyserød' },
        { src: '/images/blomst4.webp', name: 'Lyserød peon', color: 'Lyserød' },
        { src: '/images/blomst5.webp', name: 'Pastel lilla blomst', color: 'Flerfarvet' },
        { src: '/images/blomst6.webp', name: 'Gul naturblomst', color: 'Gul' },
        { src: '/images/blomst7.webp', name: 'Rød kronemix', color: 'Rød' },
        { src: '/images/blomst8.webp', name: 'Lilla stilk', color: 'Lyserød' },

        { src: '/images/anemoner.webp', name: 'Anemoner i hvid', color: 'Hvid' },
        { src: '/images/anemoner1.webp', name: 'Anemoner klassisk', color: 'Hvid' },
        { src: '/images/blaahortensia.webp', name: 'Blå hortensia', color: 'Blå' },

        { src: '/images/brudebuket.webp', name: 'Hvide roser', color: 'Hvid' },
        { src: '/images/brudebuket2.webp', name: 'Hvide blomsterstilke', color: 'Hvid' },
        { src: '/images/brudebuket3.webp', name: 'Hvide liljer', color: 'Hvid' },

        { src: '/images/bukethojre.webp', name: 'Gule blomster', color: 'Gul' },

        { src: '/images/buketlyseroed.webp', name: 'Lyserød buket', color: 'Lyserød' },
        { src: '/images/buketlyseroed2.webp', name: 'Pastel buket', color: 'Lyserød' },
        { src: '/images/buketlyseroed3.webp', name: 'Pink tulipaner', color: 'Lyserød' },
        { src: '/images/buketlyseroed4.webp', name: 'Lyserøde ranunkler', color: 'Lyserød' },

        { src: '/images/buketpaabord.webp', name: 'Gul buket', color: 'Gul' },

        { src: '/images/buketseriemulti.webp', name: 'Sommerblomst mix', color: 'Flerfarvet' },
        { src: '/images/buketseriemulti2.webp', name: 'Vilde engblomster', color: 'Flerfarvet' },
        { src: '/images/buketseriemulti3.webp', name: 'Farverigt blomsterudtryk', color: 'Flerfarvet' },

        { src: '/images/buketterpaaraekke.webp', name: 'Gule gerbera', color: 'Gul' },

        { src: '/images/buketvase.webp', name: 'Sommerbuket', color: 'Flerfarvet' },
        { src: '/images/buketvase3.webp', name: 'Blomster i vase', color: 'Flerfarvet' },

        { src: '/images/enkeltelilla.webp', name: 'Enkelt lilla blomst', color: 'Lyserød' },
        { src: '/images/enkelthvide.webp', name: 'Hvid lilje', color: 'Hvid' },

        { src: '/images/blomst1.webp', name: 'Lilla engplante', color: 'Lyserød' },

        { src: '/images/dybbuket1.webp', name: 'Peon', color: 'Hvid' },
        { src: '/images/dybbuket2.webp', name: 'Mørkerøde blomster', color: 'Rød' },

        { src: '/images/groentulipan.webp', name: 'Grøn tulipan', color: 'Grøn' },
        { src: '/images/groentulipan2.webp', name: 'Grøn blomstergren', color: 'Grøn' },
        { src: '/images/groentulipan3.webp', name: 'Grønne bløde blade', color: 'Grøn' },
        { src: '/images/vinduebuket.webp', name: 'Vinduesblomst', color: 'Flerfarvet' },
        { src: '/images/vinduebuket2.webp', name: 'Grøn naturbuket', color: 'Grøn' },
        { src: '/images/vinduebuket4.webp', name: 'Forårs buket', color: 'Flerfarvet' },
        { src: '/images/flotbuket.webp', name: 'Grøn dekorationsblomst', color: 'Grøn' },

        { src: '/images/glasbuket1.webp', name: 'Blomster i glasopsats', color: 'Flerfarvet' },
        { src: '/images/sortbaggrundbuket1.webp', name: 'farverig buket', color: 'Flerfarvet' },
          { src: '/images/valmue.webp', name: 'Valmue', color: 'Rød' },
           { src: '/images/blo.webp', name: 'Blå blomst', color: 'Blå' },
             { src: '/images/bonde.webp', name: 'Bonderose', color: 'Lyserød' },
         { src: '/images/gul.webp', name: 'Gule blomster', color: 'Gul' },
          { src: '/images/rode.webp', name: 'Røde blomster', color: 'Rød' },
      ],
      filteredImages() {
        return this.images.filter(img =>
          (this.filter==='Alle' || img.color===this.filter) &&
          img.name.toLowerCase().includes(this.search.toLowerCase())
        );
      }
    }"
    class="mt-4"
  >
    <!-- Farve-knapper -->
    <div class="flex gap-4 mb-4 flex-wrap">
      <template x-for="color in colors" :key="color">
        <button
          @click="filter = color"
          class="text-primary-content font-light px-4 py-1 text-sm uppercase tracking-widest cursor-pointer hover:bg-primary-content/40 transition"
          :class="{ 'bg-primary-content/40': filter===color }"
          x-text="color"></button>
      </template>
    </div>

    <!-- Søg -->
    <label for="search_input" class="sr-only"> Søg i galleriet </label>
    <input
      type="text"
      id="search_input"
      placeholder="Søg..."
      x-model="search"
      class="border px-3 py-2 mb-4 rounded-none"
    />

    <!-- Masonry Galleri -->
    <div class="columns-2 sm:columns-3 md:columns-4 gap-8 space-y-4">
      <template x-for="img in filteredImages()" :key="img.src">
        <div
          class="break-inside-avoid overflow-hidden hover:scale-[1.01] transition"
        >
          <img :src="img.src" class="w-full object-cover" :alt="img.name" />
          <p class="text-sm mt-1 text-primary-content" x-text="img.name"></p>
        </div>
      </template>
    </div>
  </div>
</MainLayout>

<script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer
></script>
