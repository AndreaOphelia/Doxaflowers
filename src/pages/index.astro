---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
import Link from "../components/Link.astro";
import { Image } from "astro:assets";
import thumbsup from "../assets/images/thumbsup.png";
---

<MainLayout title="Titel">
  <article>
    <h1>Index overskrift</h1>
    <Button>Klik!</Button>
    <p>
      Link til <Link href="https://www.kea.dk" target="_blank"
        >En anden side</Link
      >
    </p>
    <Image src={thumbsup} alt="" />
    <h1 class="[font-family:'OliveCitrus'] text-3xl">Hej med dig</h1>
    <p class="[font-family:'WorkSans'] text-lg">
      Dette er en tekst med WorkSans
    </p>

    <span class="[font-family:'Cormorant'] italic">
      En elegant Cormorant tekst
    </span>s
  </article>
</MainLayout>
