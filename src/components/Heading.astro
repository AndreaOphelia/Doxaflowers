---
// Henter parametrene fra Astro.props
const { htmlheading = "h2", size = "", style = "" } = Astro.props;
const Htmlheading = htmlheading;

//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige størrelser.
const sizeClasses = {
  large: "text-xl md:text-2xl",
  medium: "text-lg md:text-xl",
  small: "text-base",
  xsmall: "text-xs",
};

const styleClasses = {
    primary:
        "text-primary-content mb-4 tracking-widest",
    
    secondary:
        "text-secondary-content mb-4 tracking-widest",
    
};
---

<Htmlheading class:list={[sizeClasses[size], styleClasses[style]]}
  ><slot /></Htmlheading
>
