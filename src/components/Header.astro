<header class="left-0 w-full z-50 bg-black/90 text-white">
  <div class="max-w-7xl mx-auto flex items-center justify-between px-4 py-4">
    <!-- LOGO -->
    <a href="/" class="text-xl font-[OliveCitrus] uppercase"> Doxaflowers </a>

    <!-- DESKTOP MENU -->
    <nav class="hidden md:flex items-center gap-6">
      <a href="#" class="uppercase text-sm hover:opacity-80">Værker & Priser</a>
      <a href="#" class="uppercase text-sm hover:opacity-80">Håndværket</a>
      <a href="#" class="uppercase text-sm hover:opacity-80">Galleri</a>
      <a href="#" class="uppercase text-sm hover:opacity-80">Workshops</a>
      <a href="#" class="uppercase text-sm hover:opacity-80">Kontakt</a>
    </nav>

    <!-- BURGER BTN -->
    <button
      id="menuButton"
      class="md:hidden flex flex-col gap-1.5"
      aria-label="Toggle menu"
    >
      <span class="w-6 h-[2px] bg-white"></span>
      <span class="w-6 h-[2px] bg-white"></span>
      <span class="w-6 h-[2px] bg-white"></span>
    </button>
  </div>

  <!-- MOBILE MENU -->
  <nav
    id="mobileMenu"
    class="hidden md:hidden grid gap-5 px-6 py-8 bg-black/95"
  >
    <a href="#" class="uppercase text-base">Værker & Priser</a>
    <a href="#" class="uppercase text-base">Håndværket</a>
    <a href="#" class="uppercase text-base">Galleri</a>
    <a href="#" class="uppercase text-base">Workshops</a>
    <a href="#" class="uppercase text-base">Kontakt</a>
  </nav>
</header>

<script is:inline>
  const button = document.querySelector("#menuButton");
  const menu = document.querySelector("#mobileMenu");

  button?.addEventListener("click", () => {
    menu.classList.toggle("hidden");
  });
</script>
