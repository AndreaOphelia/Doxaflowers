<!-- teknikken (vises når brugeren scroller ned, gemmer knappen når brugeren er i toppen, scroller op når der trykkes) -->
<div
  x-data="{ isVisible: false }"
  x-init="window.addEventListener('scroll', () => { isVisible = window.scrollY > 100; })"
  class="fixed z-50 bottom-6 right-6 border border-base-200 bg-base-100 shadow-lg"
  x-show="isVisible"
  x-transition:enter="transition ease-out duration-300"
  x-transition:enter-start="opacity-0 transform translate-y-2"
  x-transition:enter-end="opacity-100 transform translate-y-0"
  x-transition:leave="transition ease-in duration-300"
  x-transition:leave-start="opacity-100 transform translate-y-0"
  x-transition:leave-end="opacity-0 transform translate-y-2"
>
  <!-- selve knappen -->
  <button
    title="Scroll to top"
    aria-label="Scroll to top"
    @click="window.scrollTo({ top: 0, behavior: 'smooth' })"
    class="w-10 h-10 flex items-center justify-center cursor-pointer"
  >
    <!-- pil svg -->
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="text-primary-content w-5 h-5"
      fill="none"
      viewBox="0 0 24 24"
      stroke="currentColor"
      aria-hidden="true"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M5 15l7-7 7 7"></path>
    </svg>

    <!-- vises kun til screen readers -->
    <span class="sr-only">Scroll til toppen</span>
  </button>
</div>
